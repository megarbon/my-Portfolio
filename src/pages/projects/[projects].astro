---
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  return [
    {
      params: { projects: "pokedex" },
      props: {
        name: "Pokedex",
        desc: "Pokedex App is a React-based web application utilizing state management, React Router, and the PokeAPI to explore and display detailed information about Pokémon creatures. This project demonstrates React proficiency, efficient state management, and seamless user navigation.",
      },
    },
    {
      params: { projects: "Java" },
      props: {
        name: "Java",
        desc: "JAVA App is a React-based web application utilizing state management, React Router, and the PokeAPI to explore and display detailed information about Pokémon creatures. This project demonstrates React proficiency, efficient state management, and seamless user navigation.",
      },
    },
    {
      params: { projects: "youtube" },
      props: {
        name: "Youtube",
        desc: "Youtube is a simple 'To-Do List' application built using React. Users can add, edit, and delete tasks from the list. The application is built using a single component that handles the rendering of the list and the form for adding new tasks. The component uses React's useState hook to manage the state of the tasks. Overall, it is a great introductory project for someone looking to learn React.",
      },
    },
    {
      params: { projects: "calculadora" },
      props: {
        name: "calculadora",
        desc: "calculadora is a simple 'To-Do List' application built using React. Users can add, edit, and delete tasks from the list. The application is built using a single component that handles the rendering of the list and the form for adding new tasks. The component uses React's useState hook to manage the state of the tasks. Overall, it is a great introductory project for someone looking to learn React.",
      },
    },
  ];
}

const { projects } = Astro.params;
const { name, desc } = Astro.props;
---

<MainLayout>
  <section class="mx-auto w-3/6">
    <img
      src=`/images/${projects}.png`
      width="600"
      height="600"
      class="rounded"
    />
    <h1 class="font-bold mt-4">Project {name}</h1>
    <p>{desc}</p>
    <section></section>
  </section>
</MainLayout>
